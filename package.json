{
  "name": "esta-tracker-monorepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "api",
    "functions"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@esta-tracker/frontend",
    "dev:backend": "turbo run dev --filter=@esta-tracker/backend",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@esta-tracker/frontend",
    "build:backend": "turbo run build --filter=@esta-tracker/backend",
    "test": "turbo run test",
    "test:frontend": "turbo run test --filter=@esta-tracker/frontend",
    "test:backend": "turbo run test --filter=@esta-tracker/backend",

    "test:coverage": "turbo run test:coverage",

    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules packages/*/node_modules .turbo",
    "postinstall": "npm run postinstall --workspaces --if-present",
    "setup:kms": "node scripts/setup-kms.js",
    "validate:deployment": "bash scripts/validate-deployment.sh",
    "ci:validate": "npm run lint && npm run typecheck && npm run test && npm run build && npm run validate:deployment"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.2.1",
    "playwright": "^1.56.1",
    "turbo": "^2.6.1",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "esbuild": "^0.27.0",
    "undici": "^6.21.0",
    "@vercel/node": {
      "path-to-regexp": "6.3.0"
    }
  },
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.3"
}