{
  "name": "esta-tracker-monorepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "api",
    "functions"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --all",
    "dev:frontend": "nx dev frontend",
    "dev:backend": "nx dev backend",
    "build": "nx run-many --target=build --all",
    "build:frontend": "nx build frontend",
    "build:backend": "nx build backend",
    "test": "nx run-many --target=test --all",
    "test:frontend": "nx test frontend",
    "test:backend": "nx test backend",
    "test:coverage": "nx run-many --target=test:coverage --all",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "nx run-many --target=lint --all",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "nx run-many --target=clean --all && rm -rf node_modules packages/*/node_modules .nx",
    "postinstall": "npm run postinstall --workspaces --if-present",
    "setup:kms": "node scripts/setup-kms.js",
    "validate:deployment": "bash scripts/validate-deployment.sh",
    "ci:validate": "npm run lint && npm run typecheck && npm run test && npm run build && npm run validate:deployment"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@nx/eslint": "^22.1.1",
    "@nx/eslint-plugin": "^22.1.1",
    "@nx/node": "^20.3.2",
    "@nx/react": "^20.3.2",
    "@nx/workspace": "^20.3.2",
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "lerna": "^8.1.8",
    "nx": "^20.3.2",
    "playwright": "^1.56.1",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "esbuild": "^0.27.0",
    "undici": "^6.21.0",
    "@vercel/node": {
      "path-to-regexp": "6.3.0"
    }
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.3"
}
