{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      // Workspace path aliases: Point to dist output to avoid cross-project compilation issues.
      // Each package builds independently, then dependent packages reference the built output.
      // This ensures proper build order via nx dependencies while maintaining clean boundaries.
      "@esta/shared-types": ["libs/shared-types/dist"],
      "@esta/shared-types/*": ["libs/shared-types/dist/*"],
      "@esta/core": ["packages/esta-core/dist"],
      "@esta/core/*": ["packages/esta-core/dist/*"],
      "@esta/firebase-adapter": ["packages/esta-firebase-adapter/dist"],
      "@esta/firebase-adapter/*": ["packages/esta-firebase-adapter/dist/*"]
    }
  },
  "include": ["src"]
}