{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@esta/shared-types": ["libs/shared-types/dist"],
      "@esta/shared-types/*": ["libs/shared-types/dist/*"],
      "@esta-tracker/shared-utils": ["libs/shared-utils/dist"],
      "@esta-tracker/shared-utils/*": ["libs/shared-utils/dist/*"],
      "@esta/firebase": ["libs/esta-firebase/dist"],
      "@esta/firebase/*": ["libs/esta-firebase/dist/*"],
      "@esta/core": ["packages/esta-core/dist"],
      "@esta/core/*": ["packages/esta-core/dist/*"],
      "@esta/firebase-adapter": ["packages/esta-firebase-adapter/dist"],
      "@esta/firebase-adapter/*": ["packages/esta-firebase-adapter/dist/*"]
    }
  },
  "include": ["src"]
}
