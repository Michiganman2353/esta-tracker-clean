{
  "name": "@esta/firebase",
  "version": "2.0.0",
  "description": "Centralized Firebase service for ESTA Tracker - single source of truth for all Firebase initialization",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./admin": {
      "types": "./src/admin-exports.ts",
      "import": "./src/admin-exports.ts",
      "require": "./src/admin-exports.ts",
      "default": "./src/admin-exports.ts"
    },
    "./testing": {
      "types": "./src/testing/index.ts",
      "import": "./src/testing/index.ts",
      "require": "./src/testing/index.ts",
      "default": "./src/testing/index.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@esta/shared-types": "file:../shared-types",
    "firebase": "^12.6.0",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  }
}
