{
  "name": "esta-firebase",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/esta-firebase/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:firebase"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "libs/esta-firebase"
      },
      "outputs": ["{projectRoot}/dist"],
      // Explicitly depend on shared-types build to ensure types are available before compilation
      "dependsOn": ["shared-types:build"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "libs/esta-firebase"
      },
      // Also depends on shared-types for type checking
      "dependsOn": ["shared-types:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --passWithNoTests",
        "cwd": "libs/esta-firebase"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "libs/esta-firebase"
      }
    }
  }
}
