{
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb",
    "airbnb/hooks",
    "prettier"
  ],
  "rules": {
    "react/prop-types": "off",
    "import/prefer-default-export": "off",
    "no-console": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "import/no-unresolved": "off",
    "import/extensions": "off",

    /** Clean, consistent, zero-conflicts import ordering */
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],

    /** React rule overrides for more realistic dev workflow */
    "react/jsx-no-comment-textnodes": "off",
    "react/jsx-no-target-blank": ["warn", { "allowReferrer": false, "enforceDynamicLinks": "always" }],
    "react/no-unescaped-entities": "warn",

    /** AirBnB can be overly aggressive â€” these smooth things out */
    "react/jsx-props-no-spreading": "off",
    "react/react-in-jsx-scope": "off",
    "react/state-in-constructor": "off",
    "react/function-component-definition": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.test.jsx"],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".json"]
      }
    }
  }
}