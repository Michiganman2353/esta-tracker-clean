# ==========================================
# ESTA Tracker - Environment Variables
# ==========================================
# Copy this file to .env for local development
# For production (Vercel), set these in your project settings

# ==========================================
# Application Environment
# ==========================================
NODE_ENV=development

# ==========================================
# Frontend Configuration (Vite)
# ==========================================
# Backend API URL - Update for production deployment
# For Vercel, this should be your production API URL
VITE_API_URL=http://localhost:3001

# ==========================================
# Backend Configuration (Express)
# ==========================================
# Server Port
PORT=3001

# JWT Secret for authentication (REQUIRED - Generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration (default: 7d)
JWT_EXPIRES_IN=7d

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/esta_tracker

# Database pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# CORS Configuration
# ==========================================
# Allowed origins for CORS (comma-separated for multiple origins)
# For production, set to your frontend domain
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ==========================================
# Firebase Configuration (Optional - if using Firebase)
# ==========================================
# Firebase project credentials
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# ==========================================
# Rate Limiting & Security
# ==========================================
# Rate limit - requests per window
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# ==========================================
# Logging & Monitoring
# ==========================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ==========================================
# Email Configuration (Optional)
# ==========================================
# SMTP configuration for notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# EMAIL_FROM=noreply@esta-tracker.com

# ==========================================
# File Upload & Storage (Optional)
# ==========================================
# Maximum file upload size in bytes (default: 5MB)
# MAX_FILE_SIZE=5242880

# Upload directory
# UPLOAD_DIR=./uploads

# ==========================================
# Session Configuration
# ==========================================
# Session secret (REQUIRED for production)
# SESSION_SECRET=your-session-secret-change-in-production

# Session cookie name
# SESSION_COOKIE_NAME=esta_tracker_session

# Session max age in milliseconds (default: 24 hours)
# SESSION_MAX_AGE=86400000

# ==========================================
# Development & Testing
# ==========================================
# Enable debug mode
DEBUG=false

# Mock data for testing
USE_MOCK_DATA=false
