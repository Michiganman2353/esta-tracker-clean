{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/frontend/src",
  "projectType": "application",
  "tags": ["type:app", "platform:web"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite",
        "cwd": "packages/frontend"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node ../../scripts/check-envs.js",
          "tsc",
          "vite build"
        ],
        "cwd": "packages/frontend",
        "parallel": false
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview",
        "cwd": "packages/frontend"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "packages/frontend"
      }
    },
    "test:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --ui",
        "cwd": "packages/frontend"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --coverage",
        "cwd": "packages/frontend"
      },
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "cwd": "packages/frontend"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/frontend"
      },
      "dependsOn": ["^build"]
    }
  }
}
