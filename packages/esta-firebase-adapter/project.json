{
  "name": "@esta/firebase-adapter",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/esta-firebase-adapter/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:shared", "scope:firebase"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "packages/esta-firebase-adapter"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["@esta/core:build", "shared-types:build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Lint handled by workspace'",
        "cwd": "packages/esta-firebase-adapter"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/esta-firebase-adapter"
      },
      "dependsOn": ["@esta/core:build", "shared-types:build"]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "packages/esta-firebase-adapter"
      }
    }
  }
}
